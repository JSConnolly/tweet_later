<% unless @current_user %>
<a href="/login/twitter"><img id="twitter-signin" src="/img/sign-in-with-twitter-gray.png"></a>
<% end %>

  <h1>Welcome <%= "@" + @current_user.username if @current_user %></h1>
<% if @current_user %>
  <h1>Tweet from here!</h1>

  <form action="/tweet/new" method="post">
    <input type="text" name="text" placeholder="Your tweet here">
    <label for="time">post __ minutes from now:</label>
    <input type="number" name="time">
    <input type="submit" value="Tweet">
  </form>
<% end %>
  <br>
  <p id="response"></p>
  <img class="waiting" src="/img/original.gif">
  <p class="waiting">Processing request...</p>

